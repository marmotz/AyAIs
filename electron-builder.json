{
  "asar": true,
  "productName": "AyAIs",
  "appId": "dev.marmotz.ayais",
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json",
    {
      "from": "../dist",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "icon": "dist/browser/assets/icons/win/icon.ico",
    "target": ["nsis"],
    "cscLink": "build/certificate.pfx"
  },
  "nsis": {
    "artifactName": "AyAis-Setup-${version}.${ext}",
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "mac": {
    "icon": "dist/browser/assets/icons/mac/icon.icns",
    "target": ["dmg"]
  },
  "linux": {
    "icon": "dist/browser/assets/icons/png/512x512.png",
    "target": ["AppImage"]
  }
}
