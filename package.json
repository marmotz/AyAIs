{
  "name": "ayais",
  "version": "0.1.2",
  "description": "AyAIs (All your AIs) is a cross-platform desktop app with Electron for AI website integration",
  "homepage": "https://github.com/marmotz/ayais",
  "author": {
    "name": "Marmotz",
    "email": "contact@marmotz.dev"
  },
  "main": "app/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "ng": "ng",
    "start": "npm-run-all -p electron:serve ng:serve",
    "ng:serve": "ng serve -c dev",
    "build": "npm run electron:serve-tsc && ng build --base-href ./",
    "web:dev": "npm run build",
    "web:prod": "npm run build -- -c production",
    "electron": "electron",
    "electron:serve-tsc": "tsc -p tsconfig.serve.json",
    "electron:serve": "wait-on tcp:4200 && npm run electron:serve-tsc && electron . --serve",
    "electron:local": "npm run web:dev && electron .",
    "electron:build": "npm run web:prod && electron-builder build -c electron-builder.json --publish=never",
    "test": "ng test --watch=false",
    "test:watch": "ng test",
    "e2e": "npm run web:prod && playwright test -c e2e/playwright.config.ts e2e/",
    "e2e:show-trace": "playwright show-trace e2e/tracing/trace.zip",
    "version": "conventional-changelog -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "lint": "prettier --check .",
    "icon:generate": "cp resources/icon.png app/ && npx electron-icon-builder --input=./resources/icon.png --output=./src/assets"
  },
  "dependencies": {
    "@angular/common": "21.1.1",
    "@angular/compiler": "21.1.1",
    "@angular/core": "21.1.1",
    "@angular/forms": "21.1.1",
    "@angular/language-service": "21.1.1",
    "@angular/platform-browser": "21.1.1",
    "@angular/platform-browser-dynamic": "21.1.1",
    "@angular/router": "21.1.1",
    "@fontsource/inter": "5.2.8",
    "@primeuix/themes": "2.0.3",
    "@tailwindcss/postcss": "4.1.18",
    "postcss": "8.5.6",
    "primeng": "21.0.4",
    "rxjs": "7.8.2",
    "tailwindcss": "4.1.18",
    "tslib": "2.8.1",
    "zone.js": "0.16.0"
  },
  "devDependencies": {
    "@angular/build": "21.1.1",
    "@angular/cli": "21.1.1",
    "@angular/compiler-cli": "21.1.1",
    "@ngx-translate/core": "17.0.0",
    "@ngx-translate/http-loader": "17.0.0",
    "@playwright/test": "1.58.0",
    "@types/node": "22.19.1",
    "@vitest/browser-playwright": "4.0.18",
    "@vitest/coverage-v8": "4.0.18",
    "@vitest/ui": "4.0.18",
    "conventional-changelog": "7.1.1",
    "electron": "39.2.5",
    "electron-builder": "26.4.0",
    "electron-debug": "4.1.0",
    "electron-reloader": "1.2.3",
    "jsdom": "27.4.0",
    "npm-run-all": "4.1.5",
    "playwright": "1.58.0",
    "prettier": "^3.8.1",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "ts-node": "10.9.2",
    "typescript": "5.9.3",
    "vitest": "4.0.18",
    "wait-on": "9.0.3",
    "webdriver-manager": "13.0.2"
  },
  "engines": {
    "node": ">= 22.12.0 || >= 24.0.0",
    "typescript": ">= 5.8.0 < 5.9.0"
  },
  "browserslist": [
    "chrome 140"
  ]
}
